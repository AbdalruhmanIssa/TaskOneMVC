@model Categorey
<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    <h1>Edit</h1>
    <form method="post" action="/categories/Edit">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-2">
            <input type="text" name="Name" class="form-control" value="@Model.Name" placeholder="category name .." />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div>
            <textarea name="Description" class="form-control" placeholder="category Description ..">@Model.Description</textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <button class="btn btn-outline-primary">Update</button>
    </form>
</body>
</html>